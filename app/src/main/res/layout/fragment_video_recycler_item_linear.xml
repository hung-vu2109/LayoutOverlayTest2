<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    android:background="@drawable/list_bg">

    <ImageView
        android:id="@+id/fragment_video_img_item_icon"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_smart_display_24"
        android:background="@drawable/list_bg"/>

    <TextView
        android:id="@+id/fragment_video_tv_item_videoName"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Video Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/fragment_video_img_item_icon"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_video_tv_item_videoName"
        android:layout_toEndOf="@id/fragment_video_img_item_icon">

        <TextView
            android:id="@+id/fragment_video_tv_item_durationVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            android:text="duration video"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/fragment_video_tv_item_sizeVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:text="size video"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>

    </RelativeLayout>
</RelativeLayout>